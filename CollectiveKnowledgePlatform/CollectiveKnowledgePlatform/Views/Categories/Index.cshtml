@{
    ViewBag.Title = "CATEGORII";
}

<br />
<h2 class="text-center">@ViewBag.Title</h2>
<br />

@if(TempData.ContainsKey("message"))
{
    <h1>@ViewBag.message</h1>
}
<br />

@if (ViewBag.AfisareButoane)
{
<div class="align-items-center justify-content-center d-flex">
    <a class="btn btn-success" href="/Categories/New">Adauga o noua categorie</a>
</div>
}

<br />

@foreach (var category in ViewBag.Categories)
{
    @Html.Label("Name", "Denumire categorie")
    <p>@category.Name</p>
    @Html.Label("Description", "Descriere categorie")
    ;
    <p>@category.Description</p>
    <a class="btn alert-success" href="/Categories/Show/@category.Id">Afisare categorie</a>

    @if (ViewBag.AfisareButoane)
    {
        <a class="btn alert-success" href="/Categories/Edit/@category.Id">Editare categorie</a>
    }


    <a class="btn alert-success" href="/Topics/Index/@category.Id">Topicuri categorie</a>

    <br />
    <hr />
    <br />
}
<br />
